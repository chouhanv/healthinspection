    <script src="js/bootstrap.min.js"></script>
  </head>

  <body>
	<div class="wrapper">
		<div class="container">
			<div class="contnt-wrppr">
				<div class="header">
					<div class="header-wrppr">
						<div class="header-lft">
							<img src="images/btn-back.png" alt="">
						</div>
						<div class="header-mid">
							<h1 class="screen-title">File Complaint</h1>
						</div>
						<div class="header-rght txt-link">
							<!--<span>Filter...</span>-->
						</div>
					</div>
				</div>
				<div class="pg-content">
					<div class="no-violationItem itm-detail complaint-item">
						<div class="clearfix info-prnt">
							<div class="item-img">
								<div class="img-contnr img-violation">
									<img src="images/item-img.jpg" alt="">
								</div>
							</div>
							<div class="item-info">
								<p class="item-name">Lupe Tortilla Long Name of Business</p>
								<div class="item-type"><span class="item-ic"><img src="images/ic-restaurant-white.png" alt=""></span><span class="item-def">Restaurant<span></div>
								<p class="item-address">123 Shepherd Dr Houston, TX 77007</p>
							</div>
						</div>
					</div>
					
					<div class="clearfix form-data complaint-form">
						<form method="post" name="file-complaint">
							<div class="form-left">
								<div class="form-group">
									<label for="email">Email:</label>
								</div>
								<div class="form-group">
									<label for="complaint">Complaint:</label>
								</div>
							</div>
							
							<div class="form-right">
								<div class="form-group">
									<input type="email" name="email" required>
								</div>
								<div class="form-group">
									<textarea name="complaint" required></textarea>
								</div>
								<button type="submit" name="submit" class="btn btn-main">Send</button>
							</div>
						</form>
					</div>
				</div>
				<div class="footer">
					<div class="footer-wrppr">
						<ul class="clearfix app-nav">
							<li><a href="/" class="link-home"><img src="images/ic-home.png" alt=""></a></li>
							<li><a href="#" class="link-map"><img src="images/ic-map.png" alt=""></a></li>
							<li><a href="#" class="link-list"><img src="images/ic-list.png" alt=""></a></li>
							<li><a href="#" class="link-bubble"><img src="images/ic-profile.png" alt=""></a></li>
							<li><a id="more-links" href="#" class="link-more"><img src="images/ic-more.png" alt=""></a></li>
							<li><a href="#" class="link-profile"><img src="images/ic-bubble.png" alt=""></a></li>
							<li><a href="#" class="link-share"><img src="images/ic-share.png" alt=""></a></li>
							<li><a href="#" class="link-settings"><img src="images/ic-settings.png" alt=""></a></li>
							<li><a href="#" class="link-help"><img src="images/ic-help.png" alt=""></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		var canvasHeight = $(window).height();
		var wrapperLeft = ($(window).width() - parseInt($('.wrapper').css('width').replace("px", ""))) / 2;
		console.log(wrapperLeft);
		$(document).ready(function(){
			$('.wrapper').css('height', canvasHeight);
			$('.wrapper > .container').css('min-height', canvasHeight);
			$('.contnt-wrppr').css('max-height', canvasHeight);
			$('.wrapper').css('left', wrapperLeft);

			$('#more-links').click(function(){
		        if($(this).hasClass('show-more')) {
		          //$(this).parent().parent().animate().css('left', '0');
		          $(this).parent().parent().removeClass('shown');
		          $(this).parent().parent().addClass('not-shown');
		          $(this).removeClass('show-more');
		        }else{
		          //$(this).parent().parent().animate().css('left', '-100px');
		          $(this).parent().parent().removeClass('not-shown');
		          $(this).parent().parent().addClass('shown');
		          $(this).addClass('show-more');
		        }
		    });
		})

		//detail page inspection buttons toggle animation
		$(document).ready(function(){
			$('.detail-wrppr > .detail-data').not('#first-elm').css('display', 'none');
			$('.detail-wrppr > .btn-insp').click(function(){
				if($(this).parent().children('.detail-data').css('display') == 'block'){
					$('.detail-wrppr > .detail-data').slideUp('slow');
					return;
				}
				$('.detail-wrppr > .detail-data').slideUp('slow');
				$(this).parent().children('.detail-data').slideDown('slow');
			})
		});
	</script>
</body>
</html>
